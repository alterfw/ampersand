{
  "name": "alterfw/ampersand",
  "description": "A microframework to develop using wordpress",
  "license": "MIT",
  "authors": [
    {
      "name": "Sergio Vilar",
      "email": "sergiovilar.r@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "twig/twig": "~1.0",
    "slim/slim": "~2.0",
    "aura/session": "3.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "3.x"
  },
  "autoload": {
    "psr-4": {
      "Ampersand\\": "src/",
      "Ampersand\\Http\\": "src/http",
      "Ampersand\\Util\\": "src/util"
    },
    "files": [
      "main.php",
      "src/router.php",
      "src/session.php",
      "src/renderer.php",
      "src/helpers/url.php"
    ]
  },
  "scripts": {
    "test": "AMPERSAND_ENV=TEST phpunit --stderr"
  }
}
